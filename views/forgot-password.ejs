<%- include('partials/header', { pageTitle: pageTitle }) %>

<div class="static-page">
    <h1><%= t('auth.forgot_password_link') %></h1> <%# Affiche les messages flash (succès ou erreur) via SweetAlert2 %>
    <% if (error) { %>
        <p class="error-message" style="display: none;"><%= error %></p>
    <% } %>
    <% if (info) { %>
        <p class="feedback-message success" style="display: none;"><%= info %></p>
    <% } %>
    
    <p>Entrez votre adresse email pour recevoir un lien de réinitialisation.</p> <form action="/forgot-password" method="POST">
        <div class="form-group">
            <label for="email"><%= t('contact.form_email') %> :</label> <input type="email" id="email" name="email" required>
        </div>
        <div>
            <button type="submit">Envoyer le lien</button> </div>
    </form>
    
    <p style="margin-top: 1rem;"><a href="/connexion">Retour à la connexion</a></p> </div>

<%- include('partials/footer') %>