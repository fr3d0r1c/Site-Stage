<%- include('partials/header', { pageTitle: pageTitle }) %>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>

<div class="static-page full-width-container">
    <h1><%= t('static_pages.school_title') %></h1>
    
    <div class="school-interactive-grid">
        
        <div class="map-column-sticky">
            <div id="map" 
                 data-locations='[
                    { "lat": 47.83849, "lng": -0.34152, "title": "Lycée (Sablé-sur-Sarthe)", "icon": "fa-school" },
                    { "lat": 46.83536, "lng": 0.53581, "title": "IUT (Châtellerault)", "icon": "fa-network-wired" },
                    { "lat": 47.46421, "lng": -0.49734, "title": "ESAIP (Angers)", "icon": "fa-graduation-cap" }
                 ]'>
            </div>

            <div class="map-navigation">
                <button id="prev-step-btn" class="nav-arrow-btn" disabled>
                    <i class="fas fa-chevron-left"></i> Précédent
                </button>
                <span id="step-indicator" style="font-weight: bold; min-width: 40px; text-align: center;">-- / --</span>
                <button id="next-step-btn" class="nav-arrow-btn">
                    Suivant <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>

        <div class="timeline-column">
            <div class="timeline">
                
                <div class="timeline-item" id="step-0">
                    <div class="timeline-icon"><i class="fas fa-school"></i></div>
                    <div class="timeline-content">
                        <h2><%= t('static_pages.school_item_3_title') %></h2> <span class="timeline-date"><%= t('static_pages.school_item_3_date') %></span>
                        <p><%= t('static_pages.school_item_3_desc') %></p>
                    </div>
                </div>

                <div class="timeline-item" id="step-1">
                    <div class="timeline-icon"><i class="fas fa-network-wired"></i></div>
                    <div class="timeline-content">
                        <h2><%= t('static_pages.school_item_2_title') %></h2> <span class="timeline-date"><%= t('static_pages.school_item_2_date') %></span>
                        <p><%= t('static_pages.school_item_2_desc') %></p>
                    </div>
                </div>
                
                <div class="timeline-item" id="step-2">
                    <div class="timeline-icon"><i class="fas fa-graduation-cap"></i></div>
                    <div class="timeline-content">
                        <h2><%= t('static_pages.school_item_1_title') %></h2> <span class="timeline-date"><%= t('static_pages.school_item_1_date') %></span>
                        <p><%= t('static_pages.school_item_1_desc') %></p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="/js/map.js"></script>
<script src="/js/scroll-reveal.js"></script> 

<%- include('partials/footer') %>