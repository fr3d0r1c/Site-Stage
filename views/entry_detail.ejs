<%- include('partials/header', { pageTitle: article.title }) %>

<article class="full-article">
    <% if (article.image_filename) { %>
        <img src="/uploads/<%= article.image_filename %>" alt="<%= article.title %>" style="max-width: 100%; height: auto; border-radius: 5px; margin-bottom: 1rem;">
    <% } %>
    <h1><%= article.title %></h1>
    <small>Publi√© le: <%= new Date(article.publication_date).toLocaleString('fr-FR') %></small>
    <hr>
    <div class="article-content"><%- article.content.replace(/\n/g, '<br>') %></div>
</article>

<nav>
    <a href="/journal">Retour au journal</a>
</nav>

<%- include('partials/footer') %>