<%- include('partials/header', { pageTitle: 'Nouvelle entrée' }) %>

<h1>Ajouter une entrée au journal</h1>

<form action="/journal" method="POST" enctype="multipart/form-data">
    <div>
        <label for="title">Titre :</label><br>
        <input type="text" id="title" name="title" required>
    </div>
    <div>
        <label for="content">Contenu :</label><br>
        <textarea id="content" name="content" rows="15" required></textarea>
    </div>
    <div>
        <label for="image">Image (optionnel) :</label><br>
        <input type="file" id="image" name="image">
    </div>
    <div>
        <button type="submit">Créer l'entrée</button>
    </div>
</form>

<%- include('partials/footer') %>