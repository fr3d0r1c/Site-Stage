<%- include('partials/header', { pageTitle: pageTitle }) %>

<div class="static-page">
    <h1>Chronologie de l'Aventure</h1>
    <p>Retrouvez toutes les étapes de mon stage, jour après jour.</p>
    <hr>

    <div class="timeline">
        <% articles.forEach(article => { %>
            <div class="timeline-item">
                <div class="timeline-icon" style="background: var(--c-primary);">
                    <i class="fas fa-pen-nib"></i>
                </div>

                <div class="timeline-content">
                    <h2><a href="/entree/<%= article.id %>"><%= article.title %></a></h2>
                    <span class="timeline-date">
                        <%= new Date(article.publication_date).toLocaleDateString(i18n.language, { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </span>

                    <% if (article.cover_image_url) { %>
                        <img src="<%= article.cover_image_url %>" alt="" style="width: 100%; height: 120px; object-fit: cover; border-radius: 8px; margin-top: 10px;">
                    <% } %>

                    <br>
                    <a href="/entree/<%= article.id %>" class="btn-text" style="margin-top: 10px;">Lire l'article &rarr;</a>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('partials/footer') %>