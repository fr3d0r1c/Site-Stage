<%- include('partials/header', { pageTitle: pageTitle }) %>

<div class="static-page">
    <h1><%= t('dashboard.title') %></h1>
    
    <div class="dashboard-cards" style="display: flex; gap: 1rem; margin-bottom: 3rem; justify-content: center;">
        <div class="stat-card">
            <div class="stat-number"><%= globalData.totalEntries %></div>
            <div class="stat-label"><%= t('dashboard.stat_entries') %></div>
        </div>
        <div class="stat-card">
            <div class="stat-number"><%= globalData.totalComments %></div>
            <div class="stat-label"><%= t('dashboard.stat_comments') %></div>
        </div>
        <div class="stat-card">
            <div class="stat-number"><%= globalData.totalTags %></div>
            <div class="stat-label">Tags utilisés</div>
        </div>
        <div class="stat-card">
            <div class="stat-number"><%= globalData.totalMessages %></div>
            <div class="stat-label">Messages</div>
            <a href="/admin/messages" style="font-size: 0.8rem; display: block; margin-top: 5px;">Voir la boîte &rarr;</a>
        </div>
    </div>

    <hr>

    <div class="heatmap-container" style="margin: 2rem 0; background: var(--c-surface); padding: 1.5rem; border-radius: 12px; border: 1px solid var(--c-border);">
        <h3 style="margin-top: 0;"><i class="fas fa-th"></i> Activité (Derniers 365 jours)</h3>
        
        <div id="contribution-heatmap" class="heatmap-grid" data-activity='<%= activityMap %>'></div>
        
        <div class="heatmap-legend"></div>
    </div>

    <hr>

    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 3rem;">
        
        <div>
            <h2 style="text-align: center;"><%= t('dashboard.weekly_title') %></h2>
            <div style="height: 300px;">
                <canvas id="weeklyChart" data-stats='<%- JSON.stringify(weeklyData || []) %>'></canvas>
            </div>
        </div>

        <div>
            <h2 style="text-align: center;">Suivi Mensuel</h2>
            <div style="height: 300px;">
                <canvas id="monthlyChart" data-stats='<%- JSON.stringify(monthlyData || []) %>'></canvas>
            </div>
        </div>
    </div>

    <hr>

    <h2 style="text-align: center;">Répartition par Sujets (Tags)</h2>
    <div style="height: 400px; max-width: 600px; margin: 0 auto;">
        <canvas id="tagsChart" data-stats='<%- JSON.stringify(tagData || []) %>'></canvas>
    </div>

    <hr>

    <div class="backup-zone" style="grid-column: span 2; background: var(--c-background); border: 1px dashed var(--c-border); padding: 15px; border-radius: 8px; display: flex; align-items: center; justify-content: space-between; gap: 20px;">

        <div style="flex: 1;">
            <h3 style="margin: 0 0 5px 0; font-size: 1rem;">1. Sauvegarder</h3>
            <a href="/admin/backup" class="btn btn-secondary" style="width: 100%; box-sizing: border-box;">
                <i class="fas fa-download"></i> Télécharger .db
            </a>
        </div>

        <div style="flex: 1;">
            <h3 style="margin: 0 0 5px 0; font-size: 1rem;">2. Restaurer</h3>
<form action="/admin/restore" method="POST" enctype="multipart/form-data" 
                  onsubmit="return confirm('⚠️ ATTENTION : Ceci va ÉCRASER toutes les données actuelles par celles du fichier. Continuer ?');"
                  style="display: flex; gap: 5px;">
                
                <input type="file" name="backup_file" accept=".db" required 
                       style="font-size: 0.8rem; width: 100%;">
                
                <button type="submit" class="btn btn-danger" style="padding: 5px 10px;">
                    <i class="fas fa-upload"></i>
                </button>
            </form>
        </div>
    </div>

    <div class="backup-zone" style="margin-top: 2rem; padding: 1.5rem; background: var(--c-background); border: 1px solid var(--c-border); border-radius: 12px;">
        <h3 style="margin-top: 0;"><i class="fas fa-music"></i> Musique du Site</h3>

        <form action="/admin/music/update" method="POST" enctype="multipart/form-data" style="display: grid; gap: 1rem;">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                <div>
                    <label>Titre affiché :</label>
                    <input type="text" name="music_title" value="<%= siteConfig.music_title %>" required>
                </div>
                <div>
                    <label>URL du fichier (MP3) :</label>
                    <input type="text" name="music_url_text" value="<%= siteConfig.music_url %>" placeholder="https://... ou laissez vide si upload">
                </div>
            </div>

            <div>
                <label>Ou uploader un fichier (remplace l'URL) :</label>
                <input type="file" name="music_file" accept="audio/*">
            </div>

            <button type="submit" class="btn">Mettre à jour le Vinyle</button>
        </form>
    </div>

</div>

<style>
    .stat-card {
        background: var(--c-background);
        border: 1px solid var(--c-border);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        flex: 1;
        min-width: 150px;
    }
    .stat-number { font-size: 2.5rem; font-weight: bold; color: var(--c-primary); }
    .stat-label { color: var(--c-text-light); text-transform: uppercase; font-size: 0.9rem; letter-spacing: 1px; }
    @media (max-width: 768px) { .dashboard-cards, div[style*="grid-template-columns"] { flex-direction: column; grid-template-columns: 1fr !important; } }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard-charts.js"></script>
<script src="/js/dashboard-heatmap.js"></script>

<%- include('partials/footer') %>